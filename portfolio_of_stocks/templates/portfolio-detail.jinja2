{% extends "base.jinja2" %}

{% block content %}
<div id="portfolio-detail">
    <h1>{{stock.companyName}}</h1>
    <p>{{stock.website}}</p>
    <p>CEO: {{stock.CEO}}</p>
    <p>Industry: {{stock.industry}}</p>
    <p>Sector: {{stock.sector}}</p>
    <p>Exchange: {{stock.exchange}}</p>
    <p>Securities:{{stock.issueType}}</p>
    <p>Summary:{{stock.description}}</p>
    
    <form action="{{request.route_url('portfolio')}}" method="GET">
        <button type="submit">Return to Portfolio</button>
    </form>
</div>

{% endblock content %}